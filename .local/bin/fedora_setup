#!/bin/sh
# Sets up Fedora
#!/bin/sh
# Set's up packages needed by yadm configs on device setup
is_root() {
    if [ "$(id -u)" -ne 0 ]; then
        echo "Run this script as root"
        exit 1
    fi
}

is_root
dnf install -y gnome-tweaks kitty zsh exa bat fd-find btop needrestart \
    docker-compose golang-docker-credential-helpers neofetch \
    libgit2-devel libssh2-devel openssl-devel pkg-config \
    starship duf git-delta texlive gh ripgrep
dnf update -y
dnf copr enable varlad/helix
dnf install helix
rpm --import https://downloads.1password.com/linux/keys/1password.asc
sh -c 'echo -e "[1password]\nname=1Password Stable Channel\nbaseurl=https://downloads.1password.com/linux/rpm/stable/\$basearch\nenabled=1\ngpgcheck=1\nrepo_gpgcheck=1\ngpgkey=\"https://downloads.1password.com/linux/keys/1password.asc\"" > /etc/yum.repos.d/1password.repo'
dnf install 1password 1password-cli
rpm --import https://packages.microsoft.com/keys/microsoft.asc
cat <<EOF | sudo tee /etc/yum.repos.d/vscode.repo
[code]
name=Visual Studio Code
baseurl=https://packages.microsoft.com/yumrepos/vscode
enabled=1
gpgcheck=1
gpgkey=https://packages.microsoft.com/keys/microsoft.asc
EOF
dnf install -y code
sh -c "$(curl -sL https://nextdns.io/install)"
sudo yum install https://prerelease.keybase.io/keybase_amd64.rpm
run_keybase
dnf config-manager --add-repo https://download.opensuse.org/repositories/home:TheLocehiliosan:yadm/Fedora_35/home:TheLocehiliosan:yadm.repo
dnf install yadm
dnf install dnf-plugins-core
dnf config-manager --add-repo https://brave-browser-rpm-release.s3.brave.com/x86_64/
rpm --import https://brave-browser-rpm-release.s3.brave.com/brave-core.asc
dnf install brave-browser
