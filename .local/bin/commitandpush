#!/usr/bin/env sh
# Stages all edited/new files, commits it with the provided message, and pushes it the current branch
branch=$(git branch | sed -n -e 's/^\* \(.*\)/\1/p')

if [ -z "$1" ]; then
    echo Please provide a commit message &&
        exit 1
fi
git add --all &&
    git commit -m "$1" &&
    git push origin "$branch" &&
    exit 0
